@{
    Layout = "Login";
}
<html>
<head>
    <title>Login</title>
</head>
<body>
    <center>
        <form method="post" asp-controller="home" asp-action="login">
            <table style="background-color:lightgray; margin-top:50px;border-radius:15px;" cellpadding="12">
                <tr>
                    <td colspan="2"><center><!--<img src=~/Images/wood.png style="width:200px;height:80px;" />--></center></td>
                </tr>
                <tr>
                    <td>Username:</td>
                    <td><input type="text" name="uname"/></td>
                </tr>
                <tr>
                    <td>Password: </td>
                    <td><input type="password" name="psd" /></td>
                </tr>
                <tr>
                    <td colspan="2"><center><input type="submit" value="Log In" style="border-radius:15px; width:50%;" /></center></td>
                </tr>
                <tr>
                    <td colspan="2"><center>@ViewBag.error</center></td>
                </tr>
            </table>
        </form>
    </center>
</body>
</html>